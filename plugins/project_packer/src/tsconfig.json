{
  "compilerOptions": {
    "outDir": "../../plugins",
    "rootDir": "./",
    "module": "es6",
    "target": "ES2017",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}